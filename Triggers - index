üîπ Vistas
CREATE VIEW user_orders AS
SELECT u.name, o.total
FROM users u
JOIN orders o ON u.id = o.user_id;

üîπ Funciones
CREATE FUNCTION get_user_orders(uid INT)
RETURNS TABLE(total NUMERIC) AS $$
BEGIN
  RETURN QUERY
  SELECT total FROM orders WHERE user_id = uid;
END;
$$ LANGUAGE plpgsql;

üîπ Constraints
PRIMARY KEY
FOREIGN KEY
UNIQUE
NOT NULL
CHECK

